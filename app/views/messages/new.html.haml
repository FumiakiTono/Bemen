%main#content
  .message
    #message-content
      メッセージ
      %ul.messagelist
        %li.message
  = form_for [@teacher, @message], class: "message-form" do |f|
    .message-body
      = f.text_field :body, placeholder: "type a message", class: "message-type"
      %label.message-form__file
        = f.file_field :image
        / %i.fa.fa-photo.icon-photo
    = f.submit "送る", class: "send-button"
