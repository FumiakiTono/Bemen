.container
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "row") do |f|
    = devise_error_messages!
    .field.form-group
      = f.label :name
      %br/
      = f.text_field :name, placeholder: "名前を入力(必須)", class: "form-control"
    .field.form-group
      = f.label :age
      %br/
      = f.text_field :age, placeholder: "年齢を入力(必須)", class: "form-control"
    .field.form-group
      = f.label :email
      %br/
      = f.email_field :email, class: "form-control"
    .field.form-group
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", class: "form-control"
    .field.form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    .field.form-group
      = f.label :image
      %br/
      = f.file_field :image
    .actions
      = f.submit "Sign up", class: "btn"
  = render "devise/shared/links"
